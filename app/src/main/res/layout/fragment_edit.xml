<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="ravotta.carrie.hw2.EditActivity"
	tools:showIn="@layout/activity_edit">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/text_margin">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/LabelTextStyle"
			android:text="@string/first_name" />

		<EditText
			android:id="@+id/first_name"
			android:inputType="textPersonName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/LabelTextStyle"
			android:text="@string/last_name" />

		<EditText
			android:id="@+id/last_name"
			android:inputType="textPersonName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/LabelTextStyle"
			android:text="@string/home_phone" />

		<EditText
			android:id="@+id/home_phone"
			android:inputType="phone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/LabelTextStyle"
			android:text="@string/work_phone" />

		<EditText
			android:id="@+id/work_phone"
			android:inputType="phone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/LabelTextStyle"
			android:text="@string/mobile_phone" />

		<EditText
			android:id="@+id/mobile_phone"
			android:inputType="phone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/LabelTextStyle"
			android:text="@string/email_address" />

		<EditText
			android:id="@+id/email"
			android:inputType="textEmailAddress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>
</android.support.v4.widget.NestedScrollView>
