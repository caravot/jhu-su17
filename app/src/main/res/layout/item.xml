<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
	app:cardBackgroundColor="@color/cardBackground"
    android:layout_marginTop="@dimen/single_item_margin_top"
	android:layout_marginBottom="@dimen/single_item_margin_right"
	android:layout_marginLeft="@dimen/single_item_margin_right"
	android:layout_marginRight="@dimen/single_item_margin_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/single_item_margin">
		<TextView
			android:id="@+id/first_name"
			android:text="SOME NAME"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/mobile_phone"
			android:text="42"
			android:gravity="right"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>
	</LinearLayout>
</android.support.v7.widget.CardView>