<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
        <variable name="position" type="int" />
		<variable name="todoItem" type="ravotta.carrie.hw5.TodoItem" />
	</data>

	<android.support.v7.widget.CardView
		android:layout_margin="@dimen/activity_horizontal_margin"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:minHeight="72dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:context="ravotta.carrie.hw5.TodoListActivity">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/priority"
                android:layout_toStartOf="@+id/priority"
                android:text="@={todoItem.name}"
                tools:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:text="@={todoItem.status}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="Status" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/status"
                android:layout_below="@+id/status"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="@={todoItem.description}"
                tools:text="Description"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:text="@={todoItem.priority}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="0" />
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</layout>
